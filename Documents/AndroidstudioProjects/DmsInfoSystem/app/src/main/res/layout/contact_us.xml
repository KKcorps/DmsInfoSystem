<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:id="@+id/ll">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Drop A Mail"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:id="@+id/textView"
        android:background="#006882"
        android:textColor="#ffffff"
        android:layout_weight="0.09" />


    <EditText
        android:id="@+id/contactName"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:hint="Your Email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/contactMail"
        android:hint="Your Email"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/contactNumber"
        android:hint="Mobile Number"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/contactSubject"
        android:hint="Subject"
        android:layout_margin="10dp"
        android:paddingTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/dropAMail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:text="Send"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/makeACall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:text="Call us Now!"
        android:layout_gravity="center"/>

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
        android:text="Visit us:"
        android:id="@+id/textView2"
        android:layout_weight="0.09"
        android:layout_marginTop="10dp"
        android:textIsSelectable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="C-246/6, Near St. Gyaneshwar School Vallabh Nagar, Raipur-492001"
        android:id="@+id/textView3"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.DialogWindowTitle"
        android:text="Corporate Office:"
        android:id="@+id/textView4"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09"
        android:textIsSelectable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="43-B, Second Floor, RIO Mall, NH-30,Raipur (C.G.) INDIA - 492001"
        android:id="@+id/textView5"
        android:layout_marginTop="10dp"
        android:layout_weight="0.09" />


    </LinearLayout>

</LinearLayout>

</ScrollView>